<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Escolas</h1>
    </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= image_tag school.photo.thumb %></td>
        <td><%= link_to "#{school.name}", school_root_path(school) %></td>
        <td><%= link_to 'Detalhes', startup_school_path(school) %></td>
        <td><%= link_to 'Editar', edit_startup_school_path(school) %></td>
        <td><%= link_to 'Apagar', startup_school_path(school), method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New School', new_startup_school_path %>
