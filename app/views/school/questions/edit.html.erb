<h1>Prova: <%= @quiz.name %></h1>
<h3>Editar quest√£o numero <%= @question.number %> </h3>
<br>

<%= form_for @question, url: school_question_path(@school, @quiz, @question), method: :patch do |f| %>
  	<% if @question.errors.any? %>
    	<div id="error_explanation">
      		<h4><%= pluralize(@question.errors.count, "erros:") %></h4>
      		<ul>
      			<% @question.errors.full_messages.each do |message| %>
        			<li><%= message %></li>
      			<% end %>
      		</ul>
    	</div>
  	<% end %>

	<%= f.label :number %>
	<%= f.text_field :number %>
	<br>
	<%= f.submit "Editar" %>
<% end %>