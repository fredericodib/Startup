<h1>Alunos da escola</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>email</th>
      <th>matricula</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.email %></td>
        <td><%= student.registration %></td>
        <td><%= link_to 'Show', school_student_path(@school, student) %></td>
        <% if !current_admin.teacher? %>
          <td><%= link_to 'Edit', edit_school_student_path(@school, student) %></td>
          <td><%= link_to 'Destroy', school_student_path(@school, student), method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
